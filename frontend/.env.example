# Angular Environment Variables
# API Configuration
# BASE_API_URL=http://localhost:3001/api
BASE_API_URL=https://api.goal-tracker.ahmadalasiri.info/api

# Application Information
ANGULAR_APP_NAME=GoalTracker
ANGULAR_APP_VERSION=1.0.0

# Environment Settings
ANGULAR_PRODUCTION=false
ANGULAR_ENABLE_LOGGING=true

# Pagination Settings
ANGULAR_DEFAULT_PAGE_SIZE=10
ANGULAR_MAX_PAGE_SIZE=100

# Authentication
ANGULAR_TOKEN_KEY=goaltracker_token
ANGULAR_USER_KEY=goaltracker_user

# Goal Settings
ANGULAR_MAX_NESTING_DEPTH=3
ANGULAR_MAX_CHILDREN_LIMIT=10

# UI Configuration
ANGULAR_TOAST_DURATION=3000

# Feature Flags
ANGULAR_FEATURE_PUBLIC_GOALS=true